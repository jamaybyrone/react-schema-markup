{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "dist/types",  // This will place types in `dist/types/`
    "outDir": "dist",  // This will place JS files in `dist/`
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react",
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*"  // Ensure `src` is included
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    ".github"
  ]
}
